#!/usr/bin/env node

var sqlite3 = require('sqlite3').verbose();
var db = new sqlite3.Database('db/dev.sqlite3');

db.serialize(function() {
  db.run('CREATE TABLE email(id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, content TEXT, createdAt DATETIME)');

  insertSeeds()
});

db.close();

function insertSeeds() {
  var stmt = db.prepare('INSERT INTO email(content, createdAt) VALUES (?, ?)');

  for (var i = 1; i <= 10; i++) {
    stmt.run('email ' + i, new Date());
  }

  stmt.finalize();
}

